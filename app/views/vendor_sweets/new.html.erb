<% if flash[:errors] %>
<% flash[:errors].each do |e| %>
<%= e %>
<% end %>
<% end %>
<%= form_for(@vendor_sweet) do |f|%>
<p>Vendor name: <%= f.collection_select :vendor_id, @vendors, :id, :name %></p>
<p>Sweet name: <%= f.collection_select :sweet_id, @sweets, :id, :name %></p>
<p>Price: <%= f.number_field :price %></p>
<%= f.submit %>
<% end %>